<Application x:Class="ProjectMomo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:properties="clr-namespace:ProjectMomo.Properties"
             Startup="Application_Startup"
             Exit="App_OnExit">
    <Application.Resources>
      <system:String x:Key="HomeHeader">Home</system:String>
      <system:String x:Key="GuestBookHeader">Guest Book</system:String>
      <system:String x:Key="SettingsHeader">Settings</system:String>
      <system:String x:Key="ShowerHeader">Shower</system:String>
      <system:String x:Key="GiftHeader">Gifts</system:String>
      <ImageBrush ImageSource="/ProjectMomo;component/Resources/ProjectMomoGraphicWithoutBorder.png" 
                  x:Key="BackgroundImage" Opacity="0.10" Stretch="None"/>
      <properties:Settings x:Key="Settings"/>
    </Application.Resources>
</Application>